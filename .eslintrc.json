{
  "env": {
    "browser": false,
    "es2021": true
  },
  "extends": ["standard"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "semi": ["off", "always"],
    "quotes": ["off", "double"],
    "comma-dangle": ["off", "always-multiline"],
    "space-before-function-paren": ["off", "always"]
  }
}
